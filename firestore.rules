rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to create and manage their own user documents
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to manage classes
    match /classes/{classId} {
      allow create, read, update, delete: if request.auth != null;
    }
    
    // Allow authenticated users to manage quizzes
    match /quizzes/{quizId} {
      allow create, read, update, delete: if request.auth != null;
    }
    
    // Allow authenticated users to manage submissions
    match /submissions/{submissionId} {
      allow create, read, update: if request.auth != null;
    }
    
    // Allow test documents for debugging
    match /test/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}